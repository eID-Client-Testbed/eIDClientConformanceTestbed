<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../schema/TestCase.xsl"?>
<TestCase id="EID_CLIENT_A1_05" xmlns="http://bsi.bund.de/TR03124" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://bsi.bund.de/TR03124 ../../schema/TR03124_Part_2.xsd">
	<Title>Test case EID_CLIENT_A1_05</Title>
	<Version>1.2</Version>
	<Purpose>Positive test of the action to return status information to the caller.</Purpose>
	<Profile>OA</Profile>
	<Profile>ACTION_STATUS</Profile>
	<Reference>TR-03124-1, Section 2.2 "Client-Interface"</Reference>
	<Precondition>The eID-Client offers its services.</Precondition>
	<TestStep>
		<Command>
			<Text>Invoke the eID-Client via the "ClientURL".</Text>
		</Command>
		<Description>Use parameter "?Status".</Description>
		<ExpectedResult>
			<Text>The eID-Client is activated and returns status information to the caller.</Text>
		</ExpectedResult>
	</TestStep>
</TestCase>